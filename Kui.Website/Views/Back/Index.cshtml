<script>
var vm = new Vue({
  el: '#app',
  data: {
    currPage: null,
    menu: []
  },
  mounted: function(){
    var self = this
    axios.get('/Api/GetSiteNodes').then(function(response){
      self.menu = [
        {
          text: '内容管理',
          children: response.data 
        }, {
          text: '网站管理',
          children: [
            {
              text: '编辑列表'
            }
          ]
        }, {
          text: '权限管理'
        }
      ]
    })
  }
})
</script>