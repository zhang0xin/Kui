<div class="tile is-ancestor">
    <div class="tile is-3 is-parent">
        <div class="box is-child" style='width: 100%'>
            <div class="menu">
              <template v-for='category in menu'>
                <div class="menu-label">
                  {{category.text}}
                </div>
                <ul v-if='category.children' class="menu-list">
                    <li v-for='item in category.children'>
                      <a v-on:click='currPage=item.component'>{{item.text}}</a>
                    </li>
                </ul>
              </template>
            </div>
        </div>
    </div>
    <div class="tile is-parent">
        <div class="tile is-child box" style='width: 100%'>
            <component v-bind:is="currPage"></component>
            <p>Suspendisse varius ligula in molestie lacinia. </p>
        </div>
    </div>
